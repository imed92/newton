{% extends 'back/base_back.html.twig' %}

{% block title %}Film/série : {{ movie.title }}{% endblock %}

{% block body %}
    <h1>Film/série</h1>

    {{ include('_flash_messages.html.twig') }}

    <h2>{{ movie.title }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ movie.duration }} min</td>
            </tr>
            <tr>
                <th>Résumé</th>
                {#
                    Si on souhaite afficher du HTML on tulise le filtre raw
                    Bien s'assurer qu'on échappe aussi les balises "script" !
                #}
                <td>{{ movie.summary|striptags('<b>')|raw }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td><img src="{{ movie.poster }}" height="250"></td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ movie.rating }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary float-end" href="{{ path('back_casting_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('back_casting_edit', {'id': movie.id}) }}">Modifier</a>

    {{ include('back/casting/_delete_form.html.twig') }}

{% endblock %}
